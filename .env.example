# =============================================================================
# BlackRoad ML Pipeline — Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env — it is in .gitignore.
# =============================================================================

# ---- Stripe (Billing & Products) ----
STRIPE_SECRET_KEY=sk_live_REPLACE_ME
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_ME
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_ME

# ---- Storage / Drive ----
STORAGE_BACKEND=local
# For S3-compatible storage:
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY=
STORAGE_S3_SECRET_KEY=
# For Google Drive:
GOOGLE_DRIVE_CREDENTIALS_JSON=
GOOGLE_DRIVE_FOLDER_ID=

# ---- ML Pipeline ----
ML_PIPELINE_DB=~/.blackroad/ml_pipeline.db
ML_PIPELINE_LOG_LEVEL=INFO
ML_PIPELINE_ARTIFACT_DIR=/artifacts

# ---- Deployment ----
DEPLOY_ENDPOINT_BASE=https://api.blackroad.ai/v1
DEPLOY_REPLICAS=2
DEPLOY_HEALTH_CHECK_INTERVAL=30

# ---- Monitoring ----
SENTRY_DSN=
METRICS_EXPORT_ENDPOINT=
